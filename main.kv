        orientation:"vertical"
        size:root.width, root.height
        padding:50
        spacing:20
        FileChooserIconView:
            id:filechooser
            pos_hint:{"center_x":0.5, "center_y":0.8}
            filters: ['*.jpg', '*.jpeg', '*.png']
