#:kivy 0.6.0
MDScreenManager:
    SplashScreen:
        name:"Splash"
    LoginScreen:
        name:"Login"
    SignUpScreen:
        name:"SignUp"
    HomeScreen:
        name:"Home"
    Scan:
        name:"Scan"
    ShopScreen:
        name:"Shop"
    CardScreen:
    RentOut:
        name:"RentOut"
    Img:
        name:"Img"
    Policies:
        name:"Policies"
    PolicyDetailScreen:

<SplashScreen>:
    Image:
        source:"images/logo.jpg"
        halign:"center"
        allow_stretch:True
        keep_ratio:False
        pos_hint:{"center_x":0.5, "center_y":0.5} 

<LoginScreen>:
    MDFloatLayout:
        Image:
            source:'images/bg.jpg'
            allow_stretch:True
            keep_ratio:False
            opacity:0.55
        MDLabel:
            text:"Welcome!"
            font_size:"40sp"
            halign:"center"
            pos_hint:{"center_x":0.5, "center_y":0.8}
            color:"#000000"
        MDTextField:
            id:username
            hint_text:"Username"
            mode:"fill"
            icon_right:"account"
            font_size:"30sp"
            pos_hint:{"center_x":0.5, "center_y":0.65}
            hint_text_color_focus:[0,0,0,0]
            text_color_focus:[0,0,0,0]
            icon_right_color_focus:[0,0,0,0]
            size_hint_x:0.85
            multiline:False
        MDTextField:
            id:password
            hint_text:"Password"
            mode:"fill"
            icon_right:"key-variant"
            font_size:"30sp"
            pos_hint:{"center_x":0.5, "center_y":0.5}
            hint_text_color_focus:[0,0,0,0]
            text_color_focus:[0,0,0,0]
            icon_right_color_focus:[0,0,0,0]
            size_hint_x:0.85
            multiline:False
            password:True
        MDRaisedButton:
            text:"Sign In"
            font_size:"30sp"
            pos_hint:{"center_x":0.5, "center_y":0.35}
            on_press:root.sign_in()
        MDLabel:
            text:"Don't have an account?"
            font_size:"18sp"  
            halign:"center"
            color:"#000000"
            pos_hint:{"center_x":0.5, "center_y":0.27}
        MDTextButton:
            text:"Sign Up"
            font_size:"20sp"
            size_hint:(None, None)
            size:100,100
            pos_hint:{"center_x":0.5, "center_y":0.24}
            color:"#82D431"
            on_press:
                root.manager.current="SignUp"
                root.manager.transition.direction="left"
                
<SignUpScreen>:
    MDFloatLayout:
        Image:
            source: 'images/bg.jpg'
            allow_stretch:True
            keep_ratio:False
            opacity:0.55
        MDLabel:
