            text:"Next"
            font_size:'30sp'
            halign:"center"
            pos_hint:{"center_x":0.5, "center_y":0.2}
            on_press: 
                root.manager.get_screen('RentOut').select_image()
                root.manager.current="RentOut"
                root.manager.transition.direction="right"
    MDIconButton:
