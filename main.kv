            font_size:"40sp"
            color:"#000000"
            halign:"center"
            pos_hint:{"center_x":0.5, "center_y":0.9}
        MDTextField:
            id:username
            hint_text:"Username"
            mode:"fill"
            font_size:"30sp"
            pos_hint:{"center_x":0.5, "center_y":0.75}
            hint_text_color_focus:[0,0,0,0]
            text_color_focus:[0,0,0,0]
            size_hint_x:0.85
            multiline:False
        MDTextField:
            id:email
            hint_text:"Email"
            mode:"fill"
            font_size:"30sp"
            pos_hint:{"center_x":0.5, "center_y":0.6}
            hint_text_color_focus:[0,0,0,0]
            text_color_focus:[0,0,0,0]
            size_hint_x:0.85
            multiline:False
        MDTextField:
            id:password
            hint_text:"Password"
            mode:"fill"
            font_size:"30sp"
            pos_hint:{"center_x":0.5, "center_y":0.45}
            hint_text_color_focus:[0,0,0,0]
            text_color_focus:[0,0,0,0]
            size_hint_x:0.85
            multiline:False
            password:True
        MDTextField:
            id:cfmpassword
            hint_text:"Confirm Password"
            mode:"fill"
            pos_hint:{"center_x":0.5, "center_y":0.3}
            hint_text_color_focus:[0,0,0,0]
            text_color_focus:[0,0,0,0]
            size_hint_x:0.85
            font_size:"30sp"
            multiline:False
            password:True
        MDRaisedButton:
            text:"Sign Up"
            font_size:"30sp"
            halign:"center"
            color:"#11A6F0"
            size_hint:(None, None)
            size:100,100
            pos_hint:{"center_x":0.5, "center_y":0.13}
            on_press: root.insert_data()
        MDIconButton:
            icon:"arrow-left"
            font_size:"30sp"
            theme_icon_color:"Custom"
            icon_color:"#000000"
            pos:0,750
            on_press:
                root.manager.current="Login"
                root.manager.transition.direction="right"

<HomeScreen>:
    Image:
        source: 'images/bg.jpg'
        allow_stretch:True
        keep_ratio:False
        opacity:0.55
    MDBoxLayout:
        orientation:"vertical"
        pos_hint:{"center_y":0.4}
        MDGridLayout:
            cols:2
            padding:30
            spacing:30
            pos_hint:{"center_y":0.4}
            MDCard:
                orientation:"vertical"
                border_radius:20
                radius:[15]
                elevation:3
                size_hint: None, None
                size: "150dp", "150dp"
                on_press:
                    root.manager.current="Scan"
                    root.manager.transition.direction="left"
                MDIconButton:
                    icon: "line-scan"
                    icon_size:"60sp"
                    theme_text_color:"Custom"
                    text_color:"#86D176"
                    size_hint_y:0.7
                    size_hint_x:1
                    on_press:
                        root.manager.current="Scan"
                        root.manager.transition.direction="left"
                MDLabel:
                    text:"Scan"
                    font_size:"20sp"
                    size_hint_y:0.35
                    size_hint_x:1
                    halign:"center"
                    color:"#86D176"
            MDCard:
                orientation:"vertical"
                border_radius:20
                radius:[15]
                elevation:3
                size_hint: None, None
                size: "150dp", "150dp"
                MDIconButton:
                    icon: "video-box"
                    icon_size:"60sp"
                    theme_text_color:"Custom"
                    text_color:"#86D176"
                    size_hint_y:0.7
                    size_hint_x:1
                MDLabel:
                    text:"Tutorials"
                    font_size:"20sp"
                    size_hint_y:0.35
                    size_hint_x:1
                    halign:"center"
                    color:"#86D176"
            MDCard:
                orientation:"vertical"
                border_radius:20
                radius:[15]
                elevation:3
                size_hint: None, None
                size: "150dp", "150dp"
                on_press:
                    root.manager.get_screen("Shop").display()
                    root.manager.current="Shop"
                    root.manager.transition.direction="left"
                MDIconButton:
                    icon: "cart"
                    icon_size:"60sp"
                    theme_text_color:"Custom"
                    text_color:"#86D176"
                    size_hint_y:0.7
                    size_hint_x:1
                    on_press:
                        root.manager.get_screen("Shop").display()
                        root.manager.current="Shop"
                        root.manager.transition.direction="left"
                MDLabel:
                    text:"Shop"
                    font_size:"20sp"
                    size_hint_y:0.35
                    size_hint_x:1
                    halign:"center"
                    color:"#86D176"
            MDCard:
                orientation:"vertical"
                border_radius:20
                radius:[15]
                elevation:3
                size_hint: None, None
                size: "150dp", "150dp"
                on_press:
                    root.manager.get_screen("Policies").policy()
                    root.manager.current="Policies"
                    root.manager.transition.direction="left"
                MDIconButton:
                    icon:"list-box"
                    icon_size:"60sp"
                    theme_text_color:"Custom"
                    text_color:"#86D176"
                    size_hint_y:0.7
                    size_hint_x:1
                    on_press:
                        root.manager.get_screen("Policies").policy()
                        root.manager.current="Policies"
                        root.manager.transition.direction="left"
                MDLabel:
                    text:"Policies"
                    font_size:"20sp"
                    size_hint_y:0.35
                    size_hint_x:1
                    halign:"center"
                    color:"#86D176"
            MDCard:
                orientation:"vertical"
                border_radius:20
                radius:[15]
                elevation:3
                size_hint: None, None
                size: "150dp", "150dp"
                MDIconButton:
                    icon:"chart-line"
                    icon_size:"60sp"
                    theme_text_color:"Custom"
                    text_color:"#86D176"
                    size_hint_y:0.7
                    size_hint_x:1
                MDLabel:
                    text:"Statistics"
                    font_size:"20sp"
                    size_hint_y:0.35
                    size_hint_x:1
                    halign:"center"
                    color:"#86D176"
    MDNavigationLayout:
        MDScreenManager:
            MDScreen:
                MDTopAppBar:
                    title: "AgriSmart"
                    title_halign:"center"
                    pos_hint: {"top": 1}
                    md_bg_color:"#222424"
                    specific_text_color:"#86D176"
                    right_action_items: [["menu", lambda x: menu.set_state("open")]]
        MDNavigationDrawer:
            id:menu
            anchor:"right"
            MDGridLayout:
                rows:5
                pos_hint: {"top": 1}
                MDNavigationDrawerItem:
                    text:"Create New Account"
                    text_color: "#86D176"
                    on_press:
                        root.manager.current="SignUp"
                        root.manager.transition.direction="left"
                MDNavigationDrawerItem:
                    text:"Delete Account"
                    text_color: "#86D176"
                    on_press:
                        root.manager.get_screen("Home").delete()
                        root.manager.transition.direction="left"
                MDNavigationDrawerItem:
                    text:"Logout"
                    text_color: "#86D176"
                    on_press:
                        root.manager.current="Login"
                        root.manager.transition.direction="left"
                MDNavigationDrawerItem:
                    text:"About the App"
                    text_color: "#86D176"
                MDNavigationDrawerItem:
                    text:"Contact Us"
                    text_color: "#86D176"

